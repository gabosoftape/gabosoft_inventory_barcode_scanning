        <record id="stock_picking_barcode_form" model="ir.ui.view" >
            <field name="name">Barcode reception</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
              <field name="origin" position="after">
                <field name="picking_checked"/>
              </field>
                <notebook>
                  <page string="Escaneo Automatico" name="barcode_picking">
                          <h2>
                              <field name="temp_barcode" placeholder="Codigo de barras"/>
                          </h2>
                          <field name="productcodes_ids">
                              <tree string="Resultados" editable="bottom" colors="red:bool_barcode==False;">
                                  <field name="product_id" required="1"/>
                                  <field name="qty" required="1" sum="Sum"/>
                                  <field name="default_code" readonly="1"/>
                                  <field name="barcode" readonly="1"/>
                                  <field name="bool_barcode" invisible="1"/>
                              </tree>
                          </field>
                          <div class="center-align" style="margin-top: 20px; margin-left: 10px; margin-bottom: 10px;">
                            <button type="object" string="Generar Movimientos" name="generate_moves" class="oe_highlight"/>
                          </div>
                          <div class="alert alert-info" role="alert" style="margin-bottom:0px;" attrs="{'invisible': [('picking_checked', '=', True)]}">
                              <field name="log_scanner"/>
                          </div>

                      </page>
                </notebook>
            </field>
        </record>
        <!-- ............... HERENCIA VISTA EN TREE ...............-->
        <record model="ir.ui.view" id="sii_barcode_tree">
            <field name="name">sii.barcode.tree</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
              <field name="state" position="after">
                  <field name="picking_checked" />
              </field>
            </field>
        </record>


